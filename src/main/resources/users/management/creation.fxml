<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="users.management.CreationController">
    
        <HBox>
            <VBox fx:id="formContainer">
                <Label text="Name:"/>
                <TextField fx:id="nameField"/>
                <Label text="Email:"/>
                <TextField fx:id="emailField"/>
                <Label text="Phone:"/>
                <TextField fx:id="phoneField"/>
                <Label text="Address:"/>
                <TextField fx:id="addressField"/>
                <Label text="City:"/>
                <TextField fx:id="cityField"/>
                <Label text="State:"/>
                <TextField fx:id="stateField"/>
                <Label text="Zip:"/>
                <TextField fx:id="zipField"/>
                <Button text="Add User" fx:id="submitButton" onAction="#addUser"/>
            </VBox>
            <VBox fx:id="infoContainer">
                <TextArea fx:id="textArea" wrapText="true" editable="false"/>
            </VBox>
        </HBox>
    
</VBox>

