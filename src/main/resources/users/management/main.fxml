<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="users.management.MainController">
    <top>
        <HBox spacing="10" alignment="center">
            <Button fx:id="dataButton" text="Table View" onAction="#showTableView" />
            <Button fx:id="moreButton" text="Creation View" onAction="#showCreationView" />
        </HBox>
    </top>
    <center>
        <Pane fx:id="mainPane">
            <!-- The content will be dynamically loaded here -->
        </Pane>
    </center>
</BorderPane>
